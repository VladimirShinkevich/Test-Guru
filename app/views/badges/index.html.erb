<p> <%= link_to t('.back'), tests_path, class: 'btn btn-primary' %> </p>

<div class="card justify-content-center mt-3 border-primary">
  <div class="card-body">
    <h1 class="text-center"> <%= t('.header_all') %> </h1>
    <table class="table table-bordered table-hover table-success table-striped text-center" id="test_table">
      <thead>
        <tr>
          <th> <%= t('.title') %></th>
          <th> <%= t('.badge') %> </th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>
  </div>
</div>

<div class="card justify-content-center mt-3 border-primary">
  <div class="card-body">
    <h1 class="text-center"> <%= t('.header_my') %></h1>
    <table class="table table-bordered table-hover table-success table-striped text-center" id="test_table">
      <thead>
        <tr>
          <th> <%= t('.title') %></th>
          <th> <%= t('.badge') %> </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "user_badge", collection: @user_badges %>
      </tbody>
    </table>
  </div>
</div>
