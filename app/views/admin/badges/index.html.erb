<div class="card justify-content-center mt-3 border-primary">
  <div class="card-body">
    <h1 class="text-center"> <%= t('.header') %> </h1>

    <%= render 'shared/errors', resource: @badge %>
    
    <table class="table table-bordered table-hover table-success table-striped text-center">
      <thead>
        <tr>
          <th> <%= t('.title') %> </th>
          <th> <%= t('.badge') %> </th>
          <th colspan="3"> <%= t('.action') %> </th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>

    <p> <%= link_to t('.create_badge'), new_admin_badge_path, class: 'btn btn-primary' %> </p>
    
  </div>
</div>
