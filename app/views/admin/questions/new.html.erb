<div class="card justify-content-center mt-3 border-primary">
  <div class="col col-md-4">
    <h1> <%= question_header(@question) %> </h1>
    <div class="card border-primary">
      <div class="card-body">
        <%= form_with model: [:admin, @test, @question], local: true do |form| %>
          <%= render 'shared/errors', resource: @question %>

          <p>
            <%= form.label :question %><br>
            <%= form.text_field :body, id: :question_body, class: "form-control" %>
          </p>

          <p> <%= form.submit %> </p>

        <% end %> 

        <%= link_to t('.back_to_test'), admin_test_path(@test) %>
     </div>  
    </div>
 </div>
</div>
